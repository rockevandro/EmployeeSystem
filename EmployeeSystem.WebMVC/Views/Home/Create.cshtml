@model NewEmployeeModel

@{
    ViewData["Title"] = "Sistema de Gestão de Funcionários";
}

<h1>Cadastro</h1>

<h4>Funcionário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (Model?.ErrorMessage != null)
        {
            foreach (var message in Model.ErrorMessage)
            {
                <div class="alert alert-danger" role="alert">
                    @message
                </div>
            }

        }
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Birthdate" class="control-label"></label>
                <input asp-for="Birthdate" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="GenderId" class="control-label"></label>
                <select asp-for="GenderId" asp-items="@ViewBag.GenderList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="SkillIdList" class="control-label"></label>
                <select asp-for="SkillIdList" asp-items="@ViewBag.SkillList" class="form-control"></select>
            </div>

            <input asp-for="EmployeeId" class="form-control" />


            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success float-right" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>
